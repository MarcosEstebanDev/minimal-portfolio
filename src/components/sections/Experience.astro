---
import cv from '../../../cv.json';

const { work: experiences } = cv;
const { description: aboutDescription } = cv.about;
---

<section id="experience">
    <div class="container">
        <h2>Experiencia</h2>
        {experiences.map(exp => (
            <div class="experience-item">
                <h3>{exp.position} en {exp.name}</h3>
                <p><strong>Periodo:</strong> {exp.startDate} - {exp.endDate}</p>
                <ul>
                    {exp.highlights.map(highlight => (
                        <li>
                            {highlight.includes("Responsabilidades") ? <strong>{highlight}</strong> : highlight}
                        </li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</section>


<style>
    #experience{
        padding: 2rem;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    }
    .container {
        max-width: 800px;
        margin: 0 auto;
        text-align: left;
        line-height: 1.4;
    }
    .experience-item {
        margin-bottom: 2rem;
    }
    .experience-item h3, h2 {
        margin: 0 0 0.5rem 0;
        color: #333;
    }
    .experience-item p {
        margin: 1rem 0;
    }
    .experience-item ul {
        margin: 1rem 0 0 1.5rem;
        padding: 0;
    }
    .experience-item li {
        margin-bottom: 0.5rem;
    }
</style>