---
import { basics } from '@cv'
import Section from '@/components/Section.astro'
const { name, label, image, email, phone, summary, location, profiles } = basics
---

<Section>
    <div class="container no-background paper-background gray-background">
        <div class="info">
            <div class="details">
                <h1>{name}</h1>
                <p class="label">{label}</p>
                <p class="summary">{summary}</p>
                <ul class="contact-info">
                    <li>Email: {email}</li>
                    <li>Phone: {phone}</li>
                    <li>Location: {location.city}, {location.region}, {location.countryCode}</li>
                </ul>
                <ul class="profiles">
                    {profiles.map(profile => (
                        <li><a href={profile.url} target="_blank" class="profile-link">{profile.network}</a></li>
                    ))}
                </ul>
            </div>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
.container {
    display: flex;
    justify-content: space-between; /* Distribuye el espacio entre los elementos */
    align-items: flex-start; /* Asegura que los elementos estén alineados en la parte superior */
    position: relative;
    z-index: 1;
    width: 100%; /* Adjust width to prevent overflow */
    height: auto; /* Adjust height to fit content */
    margin: auto; /* Center the container */
    padding: 20px; /* Add padding to prevent overlap */
}

.no-background {
    background: none;
}

.paper-background {
    background: white; /* Ensure the background is white */
}

.gray-background {
    background-color: #f0f0f0; /* Add a light gray background */
}

figure {
    margin-left: 20px;
}

figure img {
    width: 150px;
    height: auto;
    border-radius: 50%;
}

.details {
    flex: 1;
}

h1 {
    font-size: 1.5em; /* Aumenta el tamaño de la fuente del nombre */
}

.label, .summary, .contact-info, .profiles {
    font-size: 0.8em; /* Reduce el tamaño de la fuente de los datos */
}

.profile-link {
    font-size: 0.9em; /* Ajusta el tamaño de la fuente del enlace */
}

/* ...existing code... */
</style>