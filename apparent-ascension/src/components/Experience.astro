---

<section id="experience">
    <h2>Experiencia</h2>
    {experiences.map(exp => (
        <div class="experience-item">
            <h3>{exp.role} en {exp.company}</h3>
            <p><strong>Periodo:</strong> {exp.period}</p>
            <p>{exp.description}</p>
        </div>
    ))}
</section>

<style>
    #experience {
        padding: 2rem;
    }
    .experience-item {
        margin-bottom: 1.5rem;
    }
    .experience-item h3 {
        margin: 0;
    }
</style>